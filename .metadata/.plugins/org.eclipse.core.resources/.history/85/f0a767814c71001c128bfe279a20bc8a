
public class TestaIr {

	public static void main(String[] args) {
		System.out.println("Imposto de Renda (IR)");
		
		// valor
		double valor1 = 3000.0;
		double valor2 = 5100.50;
		double valor3 = 4100.50;
		
		// porcentgem
		double aliquota;
		
		// porcentagem
		double total;
		
		// mensagem
		String mensagem  = "Sua aliquota é: R$ ";
		
		if (valor1 >= 1900.0 && valor1 <= 2800.0) {
			aliquota = 7.5;
			total = valor1 / 7.5;
			System.out.println(mensagem+total);
		} else if (valor2 >= 2800.01 && valor1 <= 3751.0) {
			aliquota = 7.5;
			total = valor2 / aliquota;
			System.out.println(mensagem+total);
		} else {
			aliquota = 22.5;
			total = valor2 / aliquota;
			System.out.println(mensagem+total);
		}
	}
}
